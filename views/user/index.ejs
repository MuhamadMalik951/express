<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <form action="/user/search" method="get">
      <input type="text" name="firstName" />
      <button type="submit">Search User</button>
    </form>
    <ul>
      <% if (locals.users) {%> <% users.forEach(user => { %>
      <li>ID : <%= user.id %></li>
      <li>
        Name: <%= user.username %>
        <li>E-mail : <%= user.email %></li>
        <li>Age : <%= user.age %></li>
        <li>Bio : <%= user.bio %></li>

        <form
        action="/user/<%= user.id %>/delete"
          method="get"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this user?');"
          >
            Delete
          </button>
        </form>
        <% }); %> <% } %>
      </li>
    </ul>

    <a href="/user/create">Create a user </a> <br />
    <a href="/">Go Home </a>
  </body>
</html>
